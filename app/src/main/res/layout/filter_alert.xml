<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/filterLabelTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Filter ASC TO DESC"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/filterRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/filterLabelTxt">

        <RadioButton
            android:id="@+id/ascBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="asc" />

        <RadioButton
            android:id="@+id/descBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="desc" />


    </RadioGroup>


    <Button
        android:id="@+id/filterBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="submited"
        android:layout_marginHorizontal="15dp"
        app:layout_constraintTop_toBottomOf="@id/filterRadioGroup" />


</androidx.constraintlayout.widget.ConstraintLayout>